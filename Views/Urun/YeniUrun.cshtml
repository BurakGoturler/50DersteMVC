@model MvcStok.Models.Entity.TBL_URUNLER
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Yeni Ürün Ekle</h2>

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" maxlength="50" />
    </div>

    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="MARKA" required="" maxlength="50" />
    </div>

    <div>
        <label>Kategori</label>

        @Html.DropDownListFor(m => m.TBL_KATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new
   {
       @class = "form-control"
   })

        @*<input type="text" class="form-control" name="URUNKATEGORI" />*@
    </div>

    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="FIYAT" />
    </div>

    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="STOK" />
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Ürün Ekle</button>
    </div>

    <script>
        $('#btn1').click(function () {
            alert('Ürün başarıyla eklendi.');
        });
    </script>
</form>